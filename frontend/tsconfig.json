{
  "include": [
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".react-router/types/**/*",
    "../shared/src/rich-text.model.ts",
    "../shared/src/rich-text.builders.ts"
  ],
  "compilerOptions": {
    "types": ["@react-router/node", "vite/client"],
    "rootDirs": [".", "./.react-router/types"],
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],

      // Specify path to resolve React types
      // â€“ otherwise the PNPM workspace might not pick up the correct version
      // See https://github.com/pnpm/pnpm/issues/7158
      "react": ["./node_modules/@types/react"]
    },

    // React Router takes care of building everything in `react-router build`.
    "noEmit": true,

    "skipLibCheck": true
  }
}
